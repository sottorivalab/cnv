{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/sottorivalab/cnv/master/assets/schema_input.json",
  "title": "sottorivalab/cnv pipeline - params.input schema",
  "description": "Schema for the file provided with params.input",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "patient": {
        "type": "string",
        "pattern": "^\\S+$",
        "meta": ["patient"]
      },
      "sample": {
        "type": "string",
        "pattern": "^\\S+$",
        "meta": ["sample"]
      },
      "status": {
            "type": "integer",
            "enum": [0, 1],
            "meta": ["status"]
     },
      "bam": {
        "type": "string",
        "format": "file-path",
        "exists": true,
        "pattern": "^\\S+\\.bam$"
      },
      "bai": {
        "type": "string",
        "format": "file-path",
        "exists": true,
        "pattern": "^\\S+\\.bai$"
      },
      "seqz": {
        "type": "string",
        "format": "file-path",
        "exists": true,
        "pattern": "^\\S+\\.seqz(\\.gz)?$"
      },
      "sex": {
        "type": "string",
        "description": "Optional sex value"
      },
      "gamma": {
        "type": "integer",
        "description": "Optional gamma value"
      },
      "ploidy": {
        "type": "integer",
        "description": "Optional ploidy value"
      }
    },
    "required": ["patient", "sample"],
    "oneOf": [
      { "required": ["bam", "bai"] },
      { "required": ["seqz"] }
    ]
  }
}
